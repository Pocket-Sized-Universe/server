FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

COPY MareAPI /server/MareAPI
COPY MareSynchronosServer/PocketSizedUniverseShared /server/MareSynchronosServer/PocketSizedUniverseShared
COPY MareSynchronosServer/PocketSizedUniverseStaticFilesServer /server/MareSynchronosServer/PocketSizedUniverseStaticFilesServer

WORKDIR /server/MareSynchronosServer/PocketSizedUniverseStaticFilesServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/build \
        PocketSizedUniverseStaticFilesServer.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare

COPY --from=BUILD /build /opt/PocketSizedUniverseStaticFilesServer
RUN chown -R mare:mare /opt/PocketSizedUniverseStaticFilesServer
RUN apt-get update; apt-get install curl -y

USER mare:mare
WORKDIR /opt/PocketSizedUniverseStaticFilesServer

CMD ["./PocketSizedUniverseStaticFilesServer"]
