FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

COPY MareAPI /server/MareAPI
COPY MareSynchronosServer/PocketSizedUniverseShared /server/MareSynchronosServer/PocketSizedUniverseShared
COPY MareSynchronosServer/PocketSizedUniverseServices /server/MareSynchronosServer/PocketSizedUniverseServices

WORKDIR /server/MareSynchronosServer/PocketSizedUniverseServices/

RUN dotnet publish \
        --configuration=Debug \
        --os=linux \
        --output=/build \
        PocketSizedUniverseServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare

COPY --from=BUILD /build /opt/PocketSizedUniverseServices
RUN chown -R mare:mare /opt/PocketSizedUniverseServices
RUN apt-get update; apt-get install curl -y

USER mare:mare
WORKDIR /opt/PocketSizedUniverseServices

CMD ["./PocketSizedUniverseServices"]
