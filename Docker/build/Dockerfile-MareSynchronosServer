FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

COPY MareAPI /server/MareAPI
COPY MareSynchronosServer/PocketSizedUniverseShared /server/MareSynchronosServer/PocketSizedUniverseShared
COPY MareSynchronosServer/PocketSizedUniverseServer /server/MareSynchronosServer/PocketSizedUniverseServer

WORKDIR /server/MareSynchronosServer/PocketSizedUniverseServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/build \
        PocketSizedUniverseServer.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare

COPY --from=BUILD /build /opt/PocketSizedUniverseServer
RUN chown -R mare:mare /opt/PocketSizedUniverseServer
RUN apt-get update; apt-get install curl -y

USER mare:mare
WORKDIR /opt/PocketSizedUniverseServer

CMD ["./PocketSizedUniverseServer"]
