FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

COPY MareAPI /server/MareAPI
COPY MareSynchronosServer/PocketSizedUniverseShared /server/MareSynchronosServer/PocketSizedUniverseShared
COPY MareSynchronosServer/PocketSizedUniverseAuthService /server/MareSynchronosServer/PocketSizedUniverseAuthService

WORKDIR /server/MareSynchronosServer/PocketSizedUniverseAuthService/

RUN dotnet publish \
        --configuration=Debug \
        --os=linux \
        --output=/build \
        PocketSizedUniverseAuthService.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare

COPY --from=BUILD /build /opt/PocketSizedUniverseAuthService
RUN chown -R mare:mare /opt/PocketSizedUniverseAuthService
RUN apt-get update; apt-get install curl -y

USER mare:mare
WORKDIR /opt/PocketSizedUniverseAuthService

CMD ["./PocketSizedUniverseAuthService"]
